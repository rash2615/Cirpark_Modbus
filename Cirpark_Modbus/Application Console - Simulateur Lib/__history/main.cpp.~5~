
#include <stdio.h>
#include <iostream>
using namespace std;
#include "SNPortSerie.h"
#include "SNClientTCP.h"
#include "PortSerieAfficheur.h"


int _tmain(int argc, _TCHAR* argv[]) 
{
	SNClientTCP c1;
	SNPortSerie p1;

	p1.Ouvrir("COM3");
	c1.SeConnecterAUnServeur("172.20.21.221",3306);
	if(p1.Ouvrir("COM3")==true) cout << "Le port serie est OUVERT !" << endl;
	else cout << "Le port serie est FERME !" << endl;

	if(c1.SeConnecterAUnServeur("172.20.21.221",3306)== true)
		cout << "Vous etes connecter au serveur." << endl;
	else
        cout << "ERREUR de connexion avec le serveur" << endl;

	c1.SeDeconnecter();
    p1.Fermer();

	return 0;
}
